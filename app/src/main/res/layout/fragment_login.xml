<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:background="@drawable/img_7"
    tools:context=".LoginFragment.LoginFragment">
    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:background="@drawable/back_groud_head"
        android:orientation="vertical"
        android:layout_height="180dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_header" />
    </LinearLayout>
    <EditText
        android:id="@+id/user"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:hint="Nhập Tên Đăng Nhập"
        android:background="@drawable/custom_editext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_editext"
            android:hint="Nhập Mật Khẩu"
            android:inputType="textPassword"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/showPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_baseline_remove_red_eye_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <CheckBox
        android:id="@+id/luuPass"
        android:layout_marginTop="20dp"
        android:text="Lưu Đăng Nhập"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   <LinearLayout
       android:weightSum="10"
       android:layout_marginTop="20dp"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:layout_weight="5"
           android:id="@+id/dang_nhap"
           android:text="Đăng Nhập"
           android:layout_width="0dp"
           android:layout_height="wrap_content"/>
       <Button
           android:layout_marginLeft="20dp"
           android:id="@+id/dang_ki"
           android:layout_weight="5"
           android:text="Đăng Kí"
           android:layout_width="0dp"
           android:layout_height="wrap_content"/>
   </LinearLayout>
</LinearLayout>